<%= form_with model: hall do |form| %>
  <div>
    <div><%= form.label :name %></div>
    <div><%= form.text_field :name %></div>
  </div>
  <div>
    <div><%= form.label :capacity %></div>
    <div><%= form.number_field :capacity, min: 1 %></div>
  </div>
  <div>
    <% errors&.any? do |error| %>
      <%= error.text %>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
